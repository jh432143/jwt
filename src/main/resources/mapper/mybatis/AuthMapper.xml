<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.jwt.mapper.AuthMapper">
    <select id="getMemberInfo" resultType="com.example.jwt.vo.MemberVO">
        select email
        from   member
        where  email = 'test01'
    </select>

    <select id="findMembers" parameterType="string" resultType="com.example.jwt.vo.MemberVO">
      select username, password, authority from members where username = #{username}
    </select>
    
    <insert id="signup" parameterType="com.example.jwt.vo.MemberVO">
        insert into members values (#{username}, #{password}, #{authority})
    </insert>
</mapper>